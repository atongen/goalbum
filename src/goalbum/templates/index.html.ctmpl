<!DOCTYPE html>
<html lang="en">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>{{.Title}}</title>
  <link href="//fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" href="assets/css/app.css">
  <link rel="stylesheet" href="assets/css/default-skin/default-skin.css">
  {{ if ne .HeadContent "" -}}
  {{ .HeadContent }}
  {{ end -}}
</head>
<body>
	<div class="section no-pad-bot" id="index-banner">
    <div class="container">
      <br><br>
      <h1 class="header center {{.Color}}-text">{{.Title}}</h1>
      {{ if ne .Subtitle "" -}}
      <div class="row center">
        <h5 class="header col s12 light">{{.Subtitle}}</h5>
      </div>
      <br><br>
      {{ end -}}
    </div>
  </div>
	<div class="container">
    <div class="section">
      <div class="row">
        <div class="col s12">
					<!-- begin gallery -->
					<div class="gallery" itemscope itemtype="http://schema.org/ImageGallery">
						{{ range .Photos -}}
            <div class="cell" style="width: {{.ThumbWidth}}px; height: {{.ThumbHeight}}px" data-size="{{.SlideWidth}}x{{.SlideHeight}}" data-msrc="{{.ThumbPath}}" data-original="{{.OriginalPath}}" data-caption="{{.Caption}}" data-author="{{.Author}}" itemprop="associatedMedia" itemscope itemtype="http://schema.org/ImageObject">
              <a href="{{.OriginalPath}}" style="background-image: url({{.ThumbPath}})" itemprop="contentUrl">
								{{.Filename}}
							</a>
						</div>
						{{ end -}}
					</div>
			    <!-- end gallery -->	

          <!-- begin photoswipe chrome -->
					<div class="pswp" tabindex="-1" role="dialog" aria-hidden="true">
						<div class="pswp__bg"></div>
						<div class="pswp__scroll-wrap">
							<div class="pswp__container">
								<div class="pswp__item"></div>
								<div class="pswp__item"></div>
								<div class="pswp__item"></div>
							</div>
							<div class="pswp__ui pswp__ui--hidden">
								<div class="pswp__top-bar">
									<div class="pswp__counter"></div>
									<button class="pswp__button pswp__button--close" title="Close (Esc)"></button>
									<button class="pswp__button pswp__button--share" title="Share"></button>
									<button class="pswp__button pswp__button--fs" title="Toggle fullscreen"></button>
									<button class="pswp__button pswp__button--zoom" title="Zoom in/out"></button>
									<div class="pswp__preloader">
										<div class="pswp__preloader__icn">
											<div class="pswp__preloader__cut">
												<div class="pswp__preloader__donut"></div>
											</div>
										</div>
									</div>
								</div>
								<div class="pswp__share-modal pswp__share-modal--hidden pswp__single-tap">
									<div class="pswp__share-tooltip"></div> 
								</div>
								<button class="pswp__button pswp__button--arrow--left" title="Previous (arrow left)">
								</button>
								<button class="pswp__button pswp__button--arrow--right" title="Next (arrow right)">
								</button>
								<div class="pswp__caption">
									<div class="pswp__caption__center"></div>
								</div>
							</div>
						</div>
					</div>
          <!-- end photoswipe chrome -->
        </div>
      </div>
    </div>
  </div>
  <footer class="page-footer {{.Color}}">
    <div class="footer-copyright">
      <div class="container">
        Album Generated on {{.CreatedAt}} by <a class="{{.Color}}-text text-lighten-3" href="http://github.com/atongen/goalbum">goalbum</a>
      </div>
    </div>
  </footer>
  <script src="assets/js/app.js"></script>
  {{ if ne .BodyContent "" -}}
  {{ .BodyContent}}
  {{ end -}}
</body>
</html>
